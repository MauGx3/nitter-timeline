[MASTER]
ignore=.venv,build,dist
jobs=0
py-version=3.12
recursive=yes

[MESSAGES CONTROL]
# Disable rules that are too noisy or not aligned with project style.
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    invalid-name,
    line-too-long,
    broad-except,
    import-error

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=8
max-attributes=12

[TYPECHECK]
ignored-modules=
    fastapi,
    httpx,
    feedparser,
    dateutil,
    cachetools

[REPORTS]
score=yes

[SIMILARITIES]
min-similarity-lines=6

[STRING]
check-quote-consistency=no

[IMPORTS]
known-third-party=fastapi,httpx,feedparser,dateutil,cachetools

[LOGGING]
logging-format-style=old

[EXCEPTIONS]
overgeneral-exceptions=Exception
